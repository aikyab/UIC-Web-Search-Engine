<script>
var fundsUrl = '/donation_funds/fund.json';
var fundByCategoryUrl = '/donation_funds/fund_category.json';
$(function() {
  $("#cart-list").html('<div class="gift-fund-name" style="padding: 15px;">Your gift cart is empty. Please add funds.</div>');
    $("#listCartCount").val('0');
    $("#listCartTotal").val(0);
    $('#priorities-input').css('color','gray');
   $('#priorities-input').change(function() {
      var current = $('#priorities-input').val();
      if (current != '') {
          $('#priorities-input').css('color','black');
      } else {
          $('#priorities-input').css('color','gray');
      }
   });
 });
</script>
